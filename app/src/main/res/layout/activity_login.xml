<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_centerInParent="true"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.fibrlink.adminassistant.login.activity.LoginActivity">

    <LinearLayout
        android:id="@+id/login_name_linear_id"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/login_name_id"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/login_name"/>
        <EditText
            android:id="@+id/login_name_content_id"
            android:layout_toRightOf="@+id/login_name_id"
            android:layout_marginLeft="10dp"
            android:layout_width="125dp"
            android:layout_height="wrap_content" />
    </LinearLayout>
    <LinearLayout
        android:id="@+id/login_pwd_linear_id"
        android:layout_below="@+id/login_name_linear_id"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/login_pwd_id"

            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/login_pwd"/>
        <EditText
            android:id="@+id/login_pwd_content_id"
            android:layout_toRightOf="@+id/login_pwd_id"
            android:layout_marginLeft="10dp"
            android:layout_width="125dp"
            android:layout_height="wrap_content" />
    </LinearLayout>

    <TextView
        android:id="@+id/login_yz_text_id"
        android:layout_below="@+id/login_pwd_linear_id"
        android:background="@drawable/bg_identify_code_normal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/login_duanxin"/>

    <Button
        android:id="@+id/login_button_submit_id"
        android:layout_below="@+id/login_yz_text_id"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/login_submit"/>

</RelativeLayout>
